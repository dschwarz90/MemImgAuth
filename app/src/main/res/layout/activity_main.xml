<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.ac.uec.inf.az.memimgauth.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Please set the user name"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true" />

            <Button
                android:text="Select Pass Images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/selectPassImagesButton"
                android:layout_below="@+id/username"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp" />

            <Button
                android:text="Show Pass Images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/showPassImagesButton"
                android:layout_below="@+id/selectPassImagesButton"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp" />

            <Button
                android:text="Authenticate!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/authenticateButton"
                android:layout_below="@+id/showPassImagesButton"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Username"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
